{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock  %}

{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">User</h1>

    <div class="modal-dialog">
        <div class="modal-content">
            <table class="table">
                <tr class="list-group list-group-horizontal px-4 p-2">
                    <th class="list-group-item w-50">Id</th>
                    <td class="list-group-item w-50">{{ user.id }}</td>
                </tr>
                <tr class="list-group list-group-horizontal px-4 p-2">
                    <th class="list-group-item w-50">Name</th>
                    <td class="list-group-item w-50">{{ user.Name }}</td>
                </tr>
            </table>

            <div class="group_btn">
                <div class="p-3 px-5"><a class="text-white text-decoration-none" href="{{ path('user_index') }}"><button class="btn btn-primary ">back to list</button></a></div>

                <div class="p-3 px-5"><a class="text-white text-decoration-none" href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-warning ">edit</button></a></div>

                <div class="p-3 px-5">{{ include('user/_delete_form.html.twig') }}</div>
            </div>
        </div>
    </div>

    <style>
        h1{
            color: white;
        }
        body{
            background: linear-gradient(to right bottom, #32c8dd, #00b7e7, #00a2f1, #008bf4, #126feb);
            background-repeat: no-repeat;
            padding-top: 6%;
            padding-bottom: 25%;
        }
        .modal-dialog{
            margin-left: 24%;
        }
        .modal-content{
            width: 150%;
        }
        .group_btn{
            display: flex;
            padding-left: 12%;
            padding-bottom: 3%;
        }
    </style>
{% endblock %}
