{% extends 'base.html.twig' %}

{% block title %}Expense index{% endblock %}

{% block body %}
    <h1>Expense index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>CreatedAt</th>
                <th>Amount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expense in expenses %}
            <tr>
                <td>{{ expense.id }}</td>
                <td>{{ expense.Title }}</td>
                <td>{{ expense.CreatedAt ? expense.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ expense.Amount }}</td>
                <td>
                    <a href="{{ path('expense_show', {'id': expense.id}) }}">show</a>
                    <a href="{{ path('expense_edit', {'id': expense.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('expense_new', {'param': param}) }}">Create new</a>
{% endblock %}
